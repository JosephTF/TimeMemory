<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/new_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/p1" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/add_title" />

        <TextView
            android:id="@+id/new_text1"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="90dp"
            android:background="#cc000000"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:text="标 题"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/n_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/new_text1"
            android:layout_marginTop="90dp"
            android:background="#aa33ccff"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="0dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:singleLine="true"
            android:hint="输入内容"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/new_text2"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="140dp"
            android:background="#cc000000"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:text="时 间"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/n_time"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/new_text2"
            android:layout_marginTop="140dp"
            android:background="#aa33ccff"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="0dp"
            android:paddingBottom="9.5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:text="选择时间"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/new_text3"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="190dp"
            android:background="#cc000000"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:text="颜 色"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/n_color"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/new_text3"
            android:layout_marginTop="190dp"
            android:background="#ffffff"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="0dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/camerabtn"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p0" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:onClick="Click"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p1" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:onClick="Click"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p2" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:onClick="Click"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p3" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:onClick="Click"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p4" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:onClick="Click"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p5" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:onClick="Click"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p6" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:onClick="Click"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p7" />

                <ImageView
                    android:id="@+id/morebtn"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p8" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</RelativeLayout>